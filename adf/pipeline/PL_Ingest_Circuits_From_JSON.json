{
	"name": "PL_Ingest_Circuits_From_JSON",
	"properties": {
		"activities": [
			{
				"name": "Save JSON to ADLS2",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false
				},
				"outputs": [
					{
						"referenceName": "DS_ADLS2_JSON",
						"type": "DatasetReference",
						"parameters": {
							"file_name": {
								"value": "@pipeline().parameters.pl_file_name_json",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"pl_base_url": {
				"type": "string",
				"defaultValue": "https://ergast.com/api/f1/"
			},
			"pl_relative_url": {
				"type": "string",
				"defaultValue": "circuits.json?limit=100"
			},
			"pl_file_name_csv": {
				"type": "string",
				"defaultValue": "circuits.csv"
			},
			"pl_file_name_json": {
				"type": "string",
				"defaultValue": "circuits.json"
			}
		},
		"folder": {
			"name": "Formula1"
		},
		"annotations": []
	}
}